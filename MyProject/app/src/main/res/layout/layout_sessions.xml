<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/sessionCardView">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentRight="true"
                android:id="@+id/classimg"
                android:layout_margin="7dp"
                android:src="@drawable/class2"

                />
            <ImageView
                android:id="@+id/statusImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="55dp"
                />

            <TextView
                android:id="@+id/textViewSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شیمی"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#202020"
                android:layout_toLeftOf="@+id/classimg"
                android:textSize="18dp"
                />
            <TextView
                android:id="@+id/textViewGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewSubject"
                android:layout_marginTop="5dp"
                android:text="کنکور سراسری"
                android:layout_toLeftOf="@+id/classimg"
                android:textSize="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewTeacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewGrade"
                android:layout_marginTop="5dp"
                android:text="محمد کریمیان"
                android:layout_toLeftOf="@+id/classimg"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/textViewTeacherDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTeacherName"
                android:layout_marginTop="5dp"
                android:text="۱۲ آذر ۱۳۹۷"
                android:layout_toLeftOf="@+id/classimg"
                android:textSize="15sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>